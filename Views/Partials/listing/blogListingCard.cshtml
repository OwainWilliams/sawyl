@inherits UmbracoViewPage<BlogPage>

<li class="listing--blog __animateup">
    <div class="container">
        <div class="row">
            <div class="col-lg-2 ps-lg-0 d-flex">
                @if (Model.BlogImage != null)
                {   
                    <div class="listing-image">
                        <img src="@Model.BlogImage.Url()" />
                    </div>
                }
                else
                {
                    <div class="listing-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="#5f6368" viewBox="0 -960 960 960"><path d="M160-120q-33 0-56.5-23.5T80-200v-560q0-33 23.5-56.5T160-840h640q33 0 56.5 23.5T880-760v560q0 33-23.5 56.5T800-120H160Zm0-80h640v-560H160v560Zm80-80h480v-80H240v80Zm0-160h160v-240H240v240Zm240 0h240v-80H480v80Zm0-160h240v-80H480v80ZM160-200v-560 560Z" /></svg>
                    </div>
                }
            </div><!-- col -->

            <div class="col-lg-10 pe-lg-0">
                <div class="listing-content">
                    <time datetime="@Model.CreateDate">@Model.CreateDate.ToString("dd MMMM yyyy")</time>
                    <h3 class="listing-title">
                        <a href="">@(!string.IsNullOrWhiteSpace(Model.BlogTitle) ? Model.BlogTitle : Model.Name)</a>
                    </h3>

                    @if (!string.IsNullOrWhiteSpace(Model.ListingDescription))
                    {
                        <p class="listing-description">@Model.ListingDescription</p>
                    }
                    else if (Model.Content != null)
                    {
                        <p class="listing-description">@Model.Content</p>
                    }

                    <p class="listing-author">Written by <span>@(!string.IsNullOrWhiteSpace(Model.BlogAuthor) ? Model.BlogAuthor : "Sam Forrest")</span></p>
                </div>
            </div><!-- col -->
        </div><!-- row -->
    </div><!-- container -->
</li>
