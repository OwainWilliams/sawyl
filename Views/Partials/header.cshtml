@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
    var siteSettings = Model.GetSiteSettings();
}

<header class="header">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                @if (!string.IsNullOrWhiteSpace(siteSettings?.SiteName) || !string.IsNullOrWhiteSpace(siteSettings?.SiteSubtitle))
                {
                    <div class="header-logo __animatedown">
                        @if (!string.IsNullOrWhiteSpace(siteSettings?.SiteName))
                        {
                            <a href="/" class="header-title">@siteSettings.SiteName</a>
                        }

                        @if (!string.IsNullOrWhiteSpace(siteSettings?.SiteSubtitle))
                        {
                            <p class="header-subtitle">@siteSettings.SiteSubtitle</p>
                        }
                    </div>
                }
            </div><!-- col -->
            <div class="col-lg-8 d-flex justify-content-lg-end align-items-center">
                @await Html.PartialAsync("navigation")

                @if (siteSettings?.SearchPage != null)
                {
                    <div class="searchbar">
                        <button class="searchbar-toggle searchbarToggle">
                            <div class="searchbar-closed">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 -960 960 960"><path d="M784-120 532-372q-30 24-69 38t-83 14q-109 0-184.5-75.5T120-580q0-109 75.5-184.5T380-840q109 0 184.5 75.5T640-580q0 44-14 83t-38 69l252 252-56 56ZM380-400q75 0 127.5-52.5T560-580q0-75-52.5-127.5T380-760q-75 0-127.5 52.5T200-580q0 75 52.5 127.5T380-400Z" /></svg>
                                <span class="visually-hidden">Open search</span>
                            </div>
                            <div class="searchbar-open">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 -960 960 960"><path d="m256-200-56-56 224-224-224-224 56-56 224 224 224-224 56 56-224 224 224 224-56 56-224-224-224 224Z" /></svg>
                                <span class="visually-hidden">Close search</span>
                            </div>
                        </button>
                        <form method="get" action="@siteSettings.SearchPage.Url" class="searchbar-form">
                            <input type="text" name="query" id="query" placeholder="Search..." autocomplete="off" />
                            <button type="submit" class="searchbar-button">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 -960 960 960"><path d="M784-120 532-372q-30 24-69 38t-83 14q-109 0-184.5-75.5T120-580q0-109 75.5-184.5T380-840q109 0 184.5 75.5T640-580q0 44-14 83t-38 69l252 252-56 56ZM380-400q75 0 127.5-52.5T560-580q0-75-52.5-127.5T380-760q-75 0-127.5 52.5T200-580q0 75 52.5 127.5T380-400Z" /></svg>
                                <span class="visually-hidden">Search</span>
                            </button>
                        </form>
                    </div>
                }
            </div><!-- col -->
        </div><!-- row -->
    </div><!-- container -->
</header>