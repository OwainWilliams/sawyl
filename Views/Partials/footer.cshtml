@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
    var siteSettings = Model.GetSiteSettings();
}

<footer class="footer">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="footer-content __animateup">
                    <div class="footer-socials">
                        @if (!string.IsNullOrWhiteSpace(siteSettings.EmailLink))
                        {
                            <a href="mailto:@siteSettings.EmailLink" target="_blank" class="footer-socials-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16"><path d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414zM0 4.697v7.104l5.803-3.558zM6.761 8.83l-6.57 4.027A2 2 0 0 0 2 14h12a2 2 0 0 0 1.808-1.144l-6.57-4.027L8 9.586zm3.436-.586L16 11.801V4.697z" /></svg>
                                <span class="visually-hidden">Email me</span>
                            </a>
                        }

                        @if (!string.IsNullOrWhiteSpace(siteSettings.TwitterLink))
                        {
                            <a href="@siteSettings.TwitterLink" target="_blank" class="footer-socials-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16"><path d="M12.6.75h2.454l-5.36 6.142L16 15.25h-4.937l-3.867-5.07-4.425 5.07H.316l5.733-6.57L0 .75h5.063l3.495 4.633L12.601.75Zm-.86 13.028h1.36L4.323 2.145H2.865z" /></svg>
                                <span class="visually-hidden">View my X profile</span>
                            </a>
                        }

                        @if (!string.IsNullOrWhiteSpace(siteSettings.MastadonLink))
                        {
                            <a href="@siteSettings.MastadonLink" target="_blank" class="footer-socials-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16"><path d="M11.19 12.195c2.016-.24 3.77-1.475 3.99-2.603.348-1.778.32-4.339.32-4.339 0-3.47-2.286-4.488-2.286-4.488C12.062.238 10.083.017 8.027 0h-.05C5.92.017 3.942.238 2.79.765c0 0-2.285 1.017-2.285 4.488l-.002.662c-.004.64-.007 1.35.011 2.091.083 3.394.626 6.74 3.78 7.57 1.454.383 2.703.463 3.709.408 1.823-.1 2.847-.647 2.847-.647l-.06-1.317s-1.303.41-2.767.36c-1.45-.05-2.98-.156-3.215-1.928a4 4 0 0 1-.033-.496s1.424.346 3.228.428c1.103.05 2.137-.064 3.188-.189zm1.613-2.47H11.13v-4.08c0-.859-.364-1.295-1.091-1.295-.804 0-1.207.517-1.207 1.541v2.233H7.168V5.89c0-1.024-.403-1.541-1.207-1.541-.727 0-1.091.436-1.091 1.296v4.079H3.197V5.522q0-1.288.66-2.046c.456-.505 1.052-.764 1.793-.764.856 0 1.504.328 1.933.983L8 4.39l.417-.695c.429-.655 1.077-.983 1.934-.983.74 0 1.336.259 1.791.764q.662.757.661 2.046z" /></svg>
                                <span class="visually-hidden">View my Mastadon profile</span>
                            </a>
                        }
                    </div>
                    <p class="footer-copyright">Copyright &copy; <a href="/">Sam Forrest</a> @DateTime.Now.Year</p>
                </div>
            </div><!-- col -->
        </div><!-- row -->
    </div><!-- container -->
</footer>